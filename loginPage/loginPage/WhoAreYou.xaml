<Window x:Class="loginPage.WhoAreYou"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loginPage"
        mc:Ignorable="d"
        Title="WhoAreYou" Height="450" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Label Content="IDENTIFY YOURSELF!" HorizontalAlignment="Center" FontSize="60"/>
            <TextBox x:Name="yourNamePlzTxtBox" Margin="200,100,200,0" FontSize="30" Style="{StaticResource identityTxtBox}" KeyDown="UDied_KeyDown"/>
        </StackPanel>
    </Grid>
</Window>
