                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="20"
                        Grid.Column="3"
                        TextAlignment="Right"
                        Text="Thành tiền">

                    </TextBlock>

                </Grid>





                <ScrollViewer 
                        Grid.Row="3" Background="White"
                        VerticalScrollBarVisibility="Auto"
                        Margin="10 10 10 10">

                    <!--                        <ListView x:Name="ListPayBox" Background="#F0F3F4" BorderBrush="Transparent" >-->
