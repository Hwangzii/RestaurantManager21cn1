                                <GridViewColumn Width="260" Header="Tên món" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Width="70" Header="Số lượng" DisplayMemberBinding="{Binding Qty}"/>
                                
                                
                                <!-- Hung: Tạo một cột để khởi tạo nút sửa số lượng -->

                                <GridViewColumn Header="Sửa">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content=". . ." Click="ChangeAmount_Click"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>


                                <GridViewColumn Width="125" Header="Đơn giá" DisplayMemberBinding="{Binding Price}"/>



                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
                <Grid Grid.Row="1" Background="#FFFFFF">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Button x:Name="thanhtoan" Click="thanhtoan_Click" Style="{StaticResource buttonprint}">
                            <TextBlock Text="0 đ" FontSize="30"/>
                        </Button>
                        <Button x:Name="inhoadon"
                            Click="inhoadon_Click"
                            Style="{StaticResource buttonprint}">
                            <Icon:PackIconMaterial Kind="Printer"
                                   Height="35"
                                   Width="35"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>


        </Grid>
        
        
        <!-- Hung: Thêm popup để hiển thị bảng thay đổi số lượng, popup ko hiển thị trong designer view mà chỉ khi chạy mới thấy-->

        <Popup x:Name="popup" 
               Grid.Row="1"
               Placement="Center"
               IsOpen="False">

            <Grid x:Name="SuaSoLuong">
                <Grid.RowDefinitions>
                    <RowDefinition Height="90" />
                    <RowDefinition Height="310" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600"/>
                </Grid.ColumnDefinitions>

                <!--Phần trên-->
                <Grid Background="#FF5733">
                    <TextBlock 
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    FontSize="60" Foreground="White"
                    x:Name="Hienthitenmon">
                    </TextBlock>
                </Grid>

                <!--Phần giữa-->
                <Grid
                Background="White"
                Grid.Row="1"
                >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button 
                        Background="Transparent"
                        BorderBrush="Transparent"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontSize="100"
                        Content="-"
                        Click="ButtonClickSub"            
                        Width="Auto" Height="Auto" 
                        >
                        </Button>

                        <Button 
                        Grid.Column="2"
                        Background="Transparent"
                        BorderBrush="Transparent"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="100"
                        Content="+"
                        Click="ButtonClickAdd"        
                        Width="Auto" Height="Auto" 
                           >
                        </Button>

                        <!--Số lượng-->
                        <TextBlock
                        Grid.Column="1"
                        x:Name="Hienthiso"                   
                        FontSize="150"
                        VerticalAlignment="Center"
                       HorizontalAlignment="Center">
                        </TextBlock>
                    </Grid>
                </Grid>

                <Grid
                    Background="White"
                Grid.Row="2">

                    <Grid Margin="0 0 0 10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button
                        Background="Transparent"
                        BorderBrush="Transparent"
                        Content="Hủy"
                        FontSize="30"
                        VerticalAlignment="Center"
                        Margin="10 0 10 0"
                        Click="Cancel"
                         >
                        </Button>
                        <Button
                            Grid.Column="1"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Content="Xóa"
                            FontSize="30"
                            VerticalAlignment="Center"
                            Margin="10 0 10 0"
                            Click="Remove_Click"
                            >

                        </Button>
                        <Button
                        Grid.Column="2"
                        Background="#FF3D37FF"
                        BorderBrush="#FF3D37FF"
                        Foreground="White"
                        Content="Thêm"
                        FontSize="30"
                        VerticalAlignment="Center"
                        Margin="10 0 10 0"
                        Click="Accept"
>
                        </Button>
                    </Grid>
                </Grid>
            </Grid>


        </Popup>

        
        
        <!--Hùng: Popup để hiển thị tạm thanh toán-->
