<Window x:Class="loginPage.trangchu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:loginPage"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="trangchu" Height="1080" Width="1920">
    <Grid>
        <!-- chia 3 khung doc -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"></ColumnDefinition>
            <ColumnDefinition Width="46*"></ColumnDefinition>
            <ColumnDefinition Width="25*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.7*"></RowDefinition>
                <RowDefinition Height="9*"></RowDefinition>
            </Grid.RowDefinitions>

            <!-- Cơ sở  1 -->
            <Grid Grid.Row="0" Background="#FF5733">
                <Border>
                    <Grid>
                        <Icon:PackIconMaterial Kind="Home" Width="50" Height="50" 
                               HorizontalAlignment="Left" VerticalAlignment="Center"
                                               Foreground="#FFFFFF" Margin="30 0 200 0"/>

                        <TextBlock Text="cơ sở 1"  FontSize="30" HorizontalAlignment="Left"
                                   VerticalAlignment="Center"  Margin="100 0 0 0"
                                   Foreground="#FFFFFF"/>
                    </Grid>
                </Border>
            </Grid>

            <!-- tầng 1 + tầng 2-->
            <Grid Grid.Row="1">
                <TabControl>
                    <!-- Tầng 1-->
                    <TabItem x:Name="tang1TabItem" Height="40" Width="230">
                        <TabItem.Template>
                            <!-- bo góc khung -->
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="borderTang1" Background="{TemplateBinding Background}" CornerRadius="15"
                                        BorderThickness="1">
                                    <ContentPresenter Content="Tầng 1" ContentSource="Header" HorizontalAlignment="Center"
                                                      VerticalAlignment="Center">
                                        <ContentPresenter.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontSize" Value="20"/>
                                            </Style>
                                        </ContentPresenter.Resources>
                                    </ContentPresenter>
                                </Border>

                                <!-- chuyển màu khi chọn-->
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="borderTang1" Property="Background" Value="#FF9966"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </TabItem.Template>

                        <ScrollViewer>
                            <StackPanel VerticalAlignment="Top" Margin="0 0 0 0">
                                <Grid x:Name="banTang1Grid" HorizontalAlignment="Center" VerticalAlignment="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="150"/>
                                    </Grid.RowDefinitions>
                                </Grid>

                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                    <!-- Tâng 2-->
                    <TabItem x:Name="tang2TabItem" Margin="0 0 0 0" Header="Tầng 2" Height="40" Width="230">
                        <TabItem.Template>
                            <!-- bo góc khung -->
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="borderTang1" Background="{TemplateBinding Background}" CornerRadius="15"
                                BorderThickness="1">
                                    <ContentPresenter Content="Tầng 2" ContentSource="Header" HorizontalAlignment="Center"
                              VerticalAlignment="Center">
                                        <ContentPresenter.Resources>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="FontSize" Value="20"/>
                                            </Style>
                                        </ContentPresenter.Resources>
                                    </ContentPresenter>
                                </Border>

                                <!-- chuyển màu khi chọn-->
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="borderTang1" Property="Background" Value="#FF9966"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </TabItem.Template>

                        <ScrollViewer>
                            <StackPanel VerticalAlignment="Top" Margin="0 0 0 0">
                                <Grid x:Name="banTang2Grid" HorizontalAlignment="Center" VerticalAlignment="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="150"/>
                                        <RowDefinition Height="150"/>
                                    </Grid.RowDefinitions>
<!--
                                    <Button Grid.Column="0" Grid.Row="0" Content="201" FontSize="20" Margin="10" Style="{StaticResource buttondes}"/>
                                    <Button Grid.Column="1" Grid.Row="0" Content="202" FontSize="20" Margin="10" Style="{StaticResource buttondes}"/>
                                    <Button Grid.Column="2" Grid.Row="0" Content="203" FontSize="20" Margin="10" Style="{StaticResource buttondes}"/>

                                    <Button Grid.Column="0" Grid.Row="1" Content="204" FontSize="20" Margin="10" Style="{StaticResource buttondes}"/>
                                    <Button Grid.Column="1" Grid.Row="1" Content="205" FontSize="20" Margin="10" Style="{StaticResource buttondes}"/>
                                    <Button Grid.Column="2" Grid.Row="1" Content="206" FontSize="20" Margin="10" Style="{StaticResource buttondes}"/>

                                    <Button Grid.Column="0" Grid.Row="2" Content="207" FontSize="20" Margin="10" Style="{StaticResource buttondes}"/>
                                    <Button Grid.Column="1" Grid.Row="2" Content="208" FontSize="20" Margin="10" Style="{StaticResource buttondes}"/>
                                    <Button Grid.Column="2" Grid.Row="2" Content="209" FontSize="20" Margin="10" Style="{StaticResource buttondes}"/>

                                    <Button Grid.Column="0" Grid.Row="3" Content="210" FontSize="20" Margin="10"  Style="{StaticResource buttondes}"/>
                                    <Button Grid.Column="1" Grid.Row="3" Content="211" FontSize="20" Margin="10" Style="{StaticResource buttondes}"/>
                                    <Button Grid.Column="2" Grid.Row="3" Content="212" FontSize="20" Margin="10" Style="{StaticResource buttondes}"/>

                                    <Button Grid.Column="0" Grid.Row="4" Content="213" FontSize="20" Margin="10"  Style="{StaticResource buttondes}"/>
                                    <Button Grid.Column="1" Grid.Row="4" Content="214" FontSize="20" Margin="10" Style="{StaticResource buttondes}"/>
                                    <Button Grid.Column="2" Grid.Row="4" Content="215" FontSize="20" Margin="10" Style="{StaticResource buttondes}"/>

                                    <Button Grid.Column="0" Grid.Row="5" Content="216" FontSize="20" Margin="10"  Style="{StaticResource buttondes}"/>
                                    <Button Grid.Column="1" Grid.Row="5" Content="217" FontSize="20" Margin="10" Style="{StaticResource buttondes}"/>
                                    <Button Grid.Column="2" Grid.Row="5" Content="218" FontSize="20" Margin="10" Style="{StaticResource buttondes}"/>

                                    <Button Grid.Column="0" Grid.Row="6" Content="219" FontSize="20" Margin="10" Style="{StaticResource buttondes}"/>
                                    <Button Grid.Column="1" Grid.Row="6" Content="220" FontSize="20" Margin="10" Style="{StaticResource buttondes}"/>
-->
                                </Grid>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.7*"></RowDefinition>
                <RowDefinition Height="9*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#FF5733">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3.5*"/>
                    <ColumnDefinition Width="6.5*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <ComboBox SelectedIndex="0" FontSize="22" VerticalAlignment="Center"
                              x:Name="comboBoxMenu" Style="{DynamicResource ComboBoxStyle}" 
                              SelectionChanged="comboBoxMenu_SelectionChanged"
                              >
                        
                        <ComboBoxItem x:Name="pageFood1" Content="chọn món"/>
                        <ComboBoxItem x:Name="pageFood2" Content="All" Selected="pageFood2_Selected"/>
                        <ComboBoxItem x:Name="pageFood3" Content="Món Nướng" Selected="pageFood3_Selected"/>
                        <ComboBoxItem x:Name="pageFood4" Content="Món Lẩu" Selected="pageFood4_Selected"/>
                        <ComboBoxItem x:Name="pageFood5" Content="Món nóng" Selected="pageFood5_Selected"/>
                        <ComboBoxItem x:Name="pageFood6" Content="Đồ uống" Selected="pageFood6_Selected"/>
                    </ComboBox>
                </Grid>
                
                <Grid Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Icon:PackIconMaterial Margin="0 0 30 0" Kind="Magnify" Height="25" Width="25"
                                           Foreground="#FFFFFF"/>
                </Grid>


            </Grid>
             <!---->
            <Grid Grid.Row="1" x:Name="pageContainer"></Grid>
            
        </Grid>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.7*"></RowDefinition>
                <RowDefinition Height="9*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Background="#FF5733"></Grid>

            <Grid Grid.Row="1">

            </Grid>
        </Grid>



    </Grid>
</Window>
